<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity"
    >
    <android.support.design.widget.AppBarLayout
        android:id="@+id/main_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"/>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_below="@+id/main_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/radioGroup"
        />
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#FAF0E6"
        android:layout_height="65dp">
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <RadioButton
            android:id="@+id/rb_index"
            android:layout_width="@dimen/rb_height_width"
            android:layout_height="@dimen/rb_height_width"
            android:button="@null"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="首页"
            android:background="@null"
            android:textColor="@drawable/rb_text_selector"
            android:drawableTop="@drawable/rb_home_selector"
            android:drawablePadding="@dimen/rb_drawable_top_padding_width"
            android:checked="true"
            />
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <RadioButton
            android:id="@+id/rb_msg"
            android:layout_width="@dimen/rb_height_width"
            android:layout_height="@dimen/rb_height_width"
            android:button="@null"
            android:drawableTop="@drawable/rb_msg_selector"
            android:text="消息"
            android:background="@null"
            android:textColor="@drawable/rb_text_selector"
            android:layout_gravity="center_vertical"
            android:drawablePadding="@dimen/rb_drawable_top_padding_width"
            android:gravity="center"
            />
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <RadioButton
            android:id="@+id/rb_search"
            android:layout_width="@dimen/rb_height_width"
            android:layout_height="@dimen/rb_height_width"
            android:drawableTop="@drawable/rb_search_selector"
            android:text="联系人"
            android:background="@null"
            android:textColor="@drawable/rb_text_selector"
            android:button="@null"
            android:layout_gravity="center_vertical"
            android:drawablePadding="@dimen/rb_drawable_top_padding_width"
            android:gravity="center"
            />
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <RadioButton
            android:id="@+id/rb_mine"
            android:layout_width="@dimen/rb_height_width"
            android:layout_height="@dimen/rb_height_width"
            android:drawableTop="@drawable/rb_user_selector"
            android:text="我的"
            android:button="@null"
            android:background="@null"
            android:textColor="@drawable/rb_text_selector"
            android:layout_gravity="center_vertical"
            android:drawablePadding="@dimen/rb_drawable_top_padding_width"
            android:gravity="center"
            />
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
    </RadioGroup>

</RelativeLayout>
